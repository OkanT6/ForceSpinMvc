@model ForceSpinMvc.Views.ViewModels.MessageVM

@{
    ViewData["Title"] = "Send Message";
}

<h2>@ViewData["Title"]</h2>

<!-- Mesaj gönderim formu -->
<form method="post" asp-action="SendMessage">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label for="Body">Body</label>
        <textarea class="form-control" id="Body" name="Body" required>@Model.Body</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
</form>

<!-- Mesaj başarıyla gönderildiyse kullanıcıya bildirim -->
@if (TempData["MessageSent"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["MessageSent"]
    </div>
}
